<!-- CARD WITH TITLE -->
<div class="row">
<div class="col s12">
	<ul class="tabs">
		<li class="tab col s3"><a class="active" href="#edit">Edit Row</a></li>
	</ul>
</div>
</div>

<div class="card grey lighten-4" id="edit">
	<div class="card-content" style="padding: 0px 24px;">
        {{#if row}}
        <form action="/master/editScale/{{row._id}}" method="POST">
            <div id="scale" class="section scrollspy">
                <div class="row">
                    <div class="col s2">
                        <span class="card-title blue-text darken-3">Edit Row</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s5">
                        <div class="input-field">
                            <input type="text" id="BG" name="BG" value="{{row.BG}}" required>
                            <label class="" for="BG">BG (mmol/L)</label>
                        </div>
                    </div>
                    <div class="col s5">
                        <div class="input-field">
                            <textarea class="materialize-textarea" id="add" name="add" required>{{row.additionalInsulin}}</textarea>
                            <label class="" for="add">Additional Insulin (units)</label>
                        </div>
                    </div>
                    <div class="col s2">
                        <div class="input-field">
                            <button type="submit" class="waves-effect btn-small blue form-btn">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        {{/if}}
	</div>
</div>